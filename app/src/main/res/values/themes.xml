<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Devintensive" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_grey</item>
        <item name="colorOnPrimary">@color/color_grey_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_accent</item>
        <item name="colorSecondaryVariant">@color/color_grey</item>
        <item name="colorOnSecondary">@color/color_grey_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary_light</item>
        <!-- Customize your theme here. -->
        <item name="colorAccentSurface">@color/color_primary_light</item>
        <item name="colorIcon">@color/color_grey_light</item>
        <item name="colorDivider">@color/color_divide_light</item>
        
        <!--<item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityTransition</item>-->
    </style>
</resources>